<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity2">


    <ImageView
        android:id="@+id/topImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="top"
        android:background="@drawable/a15" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/a16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/img"
            android:layout_alignBottom="@+id/img"
            android:layout_marginRight="60dp"
            android:layout_marginBottom="40dp"
            android:text="v1.3.26"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/logos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topImg"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:src="@drawable/logo" />


        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/logo"
            android:fontFamily="sans-serif-medium"
            android:includeFontPadding="false"
            android:text="防 疫 幫 手"
            android:textColor="#0B60BA"
            android:textFontWeight="1000"
            android:textSize="35dp" />

        <TextView
            android:id="@+id/entxt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/logo"
            android:fontFamily="sans-serif-medium"
            android:includeFontPadding="false"
            android:text="Coronavirus"
            android:textColor="#0B60BA"
            android:textFontWeight="1000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/entxt1"
            android:fontFamily="sans-serif-medium"
            android:includeFontPadding="false"
            android:text="Prevention"
            android:textColor="#03A9F4"
            android:textFontWeight="1000"
            android:textSize="20dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/bl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logos"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:paddingHorizontal="25dp"
        android:src="@drawable/a4" />


    <ImageView
        android:id="@+id/gr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:paddingHorizontal="25dp"
        android:src="@drawable/a12" />




    <LinearLayout
        android:id="@+id/go_bl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bl"
        android:layout_alignBottom="@+id/bl"
        android:layout_marginLeft="50dp"
        android:gravity="center"
        android:layout_marginBottom="30dp"
        android:background="@drawable/white_ra"
        android:paddingVertical="5dp"
        android:paddingHorizontal="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#1C54C6"
            android:text="Go" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/a10"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/go_gr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/gr"
        android:layout_alignBottom="@+id/gr"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/white_ra"
        android:paddingVertical="5dp"
        android:paddingHorizontal="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingRight="3dp"
            android:text="Go"
            android:textColor="#419A45"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/a13" />
    </LinearLayout>



</RelativeLayout>


