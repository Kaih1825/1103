<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="110dp"
    android:layout_centerHorizontal="true"
    android:paddingVertical="3dp">
    <Button
        android:id="@+id/layoutClick"
        android:background="@color/trasnparent"
        android:layout_width="220dp"
        android:layout_height="match_parent"/>
    <TextView
        android:id="@+id/txt_voNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:textSize="50dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/deepBlue"/>


    <LinearLayout
        android:id="@+id/layout_voInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/txt_voNum"
        android:layout_centerVertical="true"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_error"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txt_voNum"
            android:text="請安排時間\n施打第3劑"
            android:textSize="12.5dp"
            android:textColor="#ED0101"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/txt_voType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="莫德納"
            android:textColor="@color/deepBlue"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/txt_voPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新竹台大醫院"
            android:textColor="@color/deepBlue"
            android:textSize="12dp"/>
        <TextView
            android:id="@+id/txt_voDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2021/11/19 11:38"
            android:textColor="@color/grey"
            android:textSize="12dp"/>
    </LinearLayout>

    <Button
        android:theme="@style/Theme.AppCompat"
        android:id="@+id/line"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@color/grey"
        android:layout_toRightOf="@id/layout_voInfo"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:layout_centerVertical="false"
        android:orientation="horizontal" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/line"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img_voIsOk"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_toRightOf="@id/line"
            android:layout_centerVertical="true"
            android:src="@drawable/a7"/>
        <TextView
            android:id="@+id/txt_voIsOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/deepBlue"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="已施打"/>
    </LinearLayout>

</RelativeLayout>