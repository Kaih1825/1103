<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.1103.AppWidget.Container"
    android:layout_width="140dp"
    android:layout_height="140dp"
    android:padding="0dp"
    android:rotation="90"
    android:background="@drawable/widget_bac_1"
    android:backgroundTint="@color/deepBlue"
    android:theme="@style/Theme.1103.AppWidgetContainer">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="疫苗護照"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="18dp"/>



    <ImageButton
        android:id="@+id/btn_editVo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/baseline_mode_edit_24"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="7dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:background="@drawable/widget_bac_1"
        android:padding="0dp"
        android:backgroundTint="@color/white" >
        <LinearLayout
            android:layout_width="105dp"
            android:layout_height="130dp"
            android:orientation="vertical"
            android:padding="0dp"
            android:layout_gravity="center"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/txt_voNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@color/deepBlue"
                    android:textStyle="bold"
                    android:layout_marginRight="2dp"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/txt_voType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="默德納"
                    android:textColor="@color/deepBlue"
                    android:textSize="15dp" />

                <ImageView
                    android:id="@+id/img_voIsOk"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/a7" />
            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>
            <TextView
                android:id="@+id/txt_error"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txt_voNum"
                android:text="請安排時間\n施打第3劑"
                android:textSize="10dp"
                android:textColor="#ED0101"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="-5dp"/>
            <TextView
                android:id="@+id/txt_voPlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新竹台大新竹醫院"
                android:textColor="@color/deepBlue"
                android:textSize="10dp"/>
            <TextView
                android:id="@+id/txt_voDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2021/11/19 11:38"
                android:textColor="@color/grey"
                android:textSize="8dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="11dp"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/dot_1"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/cir_blu"/>
                <ImageView
                    android:id="@+id/dot_2"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/cir"/>
                <ImageView
                    android:id="@+id/dot_3"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:src="@drawable/cir"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>