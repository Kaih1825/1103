<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.1103.AppWidget.Container"
    android:layout_width="140dp"
    android:layout_height="140dp"
    android:padding="0dp"
    android:rotation="90"
    android:background="@drawable/widget_bac_1"
    android:backgroundTint="@color/green"
    android:theme="@style/Theme.1103.AppWidgetContainer">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="防疫實聯制"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="18dp"/>



    <ImageButton
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/baseline_add_24_white"
        android:layout_alignParentRight="true"
        android:layout_marginTop="2dp"
        android:layout_marginRight="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="7dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:background="@drawable/widget_bac_1"
        android:padding="0dp"
        android:backgroundTint="@color/white" >
        <LinearLayout
            android:layout_width="105dp"
            android:layout_height="130dp"
            android:orientation="vertical"
            android:padding="0dp"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:id="@+id/txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2022/03/27"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:layout_marginRight="2dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="left"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14:20 PM"
                android:layout_gravity="left"
                android:textColor="@color/green"
                android:textSize="15dp" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>
            <TextView
                android:id="@+id/txt_voPlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21234 2234 3234 4234"
                android:layout_marginTop="3dp"
                android:textColor="@color/black"
                android:textSize="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="11dp"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/dot_1"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/cir_green"/>
                <ImageView
                    android:id="@+id/dot_2"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/cir"/>
                <ImageView
                    android:id="@+id/dot_3"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/cir"/>
                <ImageView
                    android:id="@+id/dot_4"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/cir"/>
                <ImageView
                    android:id="@+id/dot_5"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:src="@drawable/cir"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>