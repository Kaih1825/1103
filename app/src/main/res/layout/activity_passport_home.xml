<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".passport_home">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/a3" />

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/a11" />

    <RelativeLayout
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_back"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginHorizontal="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_chName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="王曉明"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_enName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Xiao Ming"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_birDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="1996.05.22"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_personalInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:background="@drawable/white_cir"
            android:src="@drawable/a0" />


    </RelativeLayout>

    <HorizontalScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:paddingBottom="10dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/scroll1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="70dp"
                android:background="@drawable/scroll_view_bac"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/scroll1Img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/a7" />

                <TextView
                    android:id="@+id/scroll1Text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="已完成"
                    android:textColor="#1C54C6"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/scroll1Text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="第一劑疫苗"
                    android:textColor="#1C54C6"
                    android:textSize="25dp"
                    android:textStyle="bold" />
                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_vo1"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="5dp"
                    android:backgroundTint="#00AE0E">
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="已接種疫苗"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/scroll2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:background="@drawable/scroll_view_bac"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/scroll2Img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/a7" />

                <TextView
                    android:id="@+id/scroll2Text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="已完成"
                    android:textColor="#1C54C6"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/scrol2Text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="第二劑疫苗"
                    android:textColor="#1C54C6"
                    android:textSize="25dp"
                    android:textStyle="bold" />
                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_vo2"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="5dp"
                    android:backgroundTint="#00AE0E">
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="已接種疫苗"/>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/scroll3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="70dp"
                android:gravity="center"
                android:background="@drawable/scroll_view_bac"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/scroll3Img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/a8" />

                <TextView
                    android:id="@+id/scroll3Text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="未完成"
                    android:textColor="#C40702"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/scrol3Text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="第三劑疫苗"
                    android:textColor="#C40702"
                    android:textSize="25dp"
                    android:textStyle="bold" />
                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_vo3"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="5dp"
                    android:backgroundTint="#C40702">
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="已接種疫苗"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/scrollViewIndex"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_below="@+id/scrollView"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="360dp">

            <LinearLayout
                android:id="@+id/scroll1Dot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#1C54C6"
                android:orientation="horizontal" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="#B3B3B3"
            app:cardCornerRadius="360dp">

            <LinearLayout
                android:id="@+id/scroll2Dot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#B3B3B3"
                android:orientation="horizontal" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="#B3B3B3"
            app:cardCornerRadius="360dp">

            <LinearLayout
                android:id="@+id/scroll3Dot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#B3B3B3"
                android:orientation="horizontal" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <TextView
        android:id="@+id/hinttxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/scrollViewIndex"
        android:fontFamily="sans-serif-medium"
        android:paddingHorizontal="10dp"
        android:text="疫苗接種紀錄"
        android:textColor="#205EDC"
        android:textSize="20dp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hinttxt"
        android:layout_alignParentBottom="true" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/dialogBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="2dp" />







</RelativeLayout>
